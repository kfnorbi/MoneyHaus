                            <exclude>hu.unideb.inf.moneyhaus.facesconverter.*.java</exclude>
                            <exclude>hu.unideb.inf.moneyhaus.refresher.*Impl.java</exclude>
                        </excludes>
                    </instrumentation>
                </configuration>
            </plugin>
